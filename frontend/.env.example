# Environment Configuration for Emotion-Aware Shopping Frontend

# Backend API Configuration
REACT_APP_API_URL=http://localhost:5000

# Debug Mode (set to false in production)
REACT_APP_DEBUG=true

# Webcam Configuration
REACT_APP_WEBCAM_WIDTH=320
REACT_APP_WEBCAM_HEIGHT=240

# Emotion Detection Settings
REACT_APP_CAPTURE_INTERVAL=8000
REACT_APP_INITIAL_DELAY=3000

# API Timeout (in milliseconds)
REACT_APP_API_TIMEOUT=30000

# Feature Flags
REACT_APP_AUTO_CAPTURE=true
REACT_APP_WELLNESS_MODE=true
REACT_APP_COMPRESSION_ENABLED=true

# Analytics (optional)
# REACT_APP_ANALYTICS_ID=your_analytics_id
# REACT_APP_SENTRY_DSN=your_sentry_dsn
